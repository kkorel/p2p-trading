{
  "name": "p2p-energy-trading",
  "version": "1.0.0",
  "description": "Beckn v2 P2P Energy Trading Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:web": "npm run build -w @p2p/web",
    "kill-ports": "kill-port 3000 4000 --silent || exit 0",
    "predev": "npm run kill-ports",
    "dev": "npm run dev -w @p2p/bap",
    "dev:all": "concurrently \"npm run dev -w @p2p/bap\" \"npm run dev -w @p2p/web\"",
    "dev:bap": "npm run dev -w @p2p/bap",
    "dev:web": "npm run dev -w @p2p/web",
    "start": "NODE_ENV=production npm run start -w @p2p/bap",
    "start:prod:all": "NODE_ENV=production concurrently \"npm run start -w @p2p/bap\" \"npm run start -w @p2p/web\"",
    "start:all": "node scripts/start-all.js",
    "start:all:clean": "node scripts/start-all.js --clean",
    "seed": "npm run seed -w @p2p/bap",
    "clean": "rimraf packages/*/dist packages/*/.next",
    "clear:all": "rimraf packages/*/*.db",
    "reset": "npm run clear:all && npm run seed",
    "db:generate": "prisma generate --schema=packages/shared/prisma/schema.prisma",
    "db:push": "prisma db push --schema=packages/shared/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=packages/shared/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=packages/shared/prisma/schema.prisma",
    "db:reset:railway": "prisma db push --force-reset --schema=packages/shared/prisma/schema.prisma && npm run seed -w @p2p/bap",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.yml -f docker-compose.prod.yml logs -f",
    "wait-for-services": "wait-on tcp:5432 tcp:6379 --timeout 30000",
    "db:reset": "prisma db push --force-reset --schema=packages/shared/prisma/schema.prisma",
    "db:seed": "npm run seed -w @p2p/bap",
    "db:reset:seed": "npm run db:reset && npm run db:seed",
    "setup": "npm run docker:up && npm run wait-for-services",
    "setup:clean": "npm run kill-ports && npm run docker:up && npm run wait-for-services && npm run db:reset:seed",
    "setup:prod": "npm run docker:up && npm run wait-for-services && npm run db:push && npm run db:generate",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e:backend": "jest --testPathPattern=e2e --runInBand",
    "test:concurrency": "jest --testPathPattern=concurrency --runInBand",
    "test:all": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "test:frontend": "npm test -w @p2p/web",
    "test:frontend:watch": "npm run test:watch -w @p2p/web",
    "test:frontend:coverage": "npm run test:coverage -w @p2p/web",
    "test:e2e": "npm run test:e2e -w @p2p/web",
    "test:e2e:headed": "npm run test:e2e:headed -w @p2p/web",
    "test:e2e:ui": "npm run test:e2e:ui -w @p2p/web",
    "test:full": "npm run test:all && npm run test:frontend && npm run test:e2e",
    "validate": "npm run lint && npm test"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "prisma": "^5.22.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "lightningcss": "^1.31.1"
  }
}
