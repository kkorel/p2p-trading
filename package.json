{
  "name": "p2p-energy-trading",
  "version": "1.0.0",
  "description": "Beckn v2 P2P Energy Trading MVP - Phase 1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "kill-ports": "node -e \"const killPort=require('kill-port'); Promise.all([4000,4001,4002].map((port)=>killPort(port).catch(()=>{}))).then(()=>console.log('Ports cleared'));\"",
    "predev": "npm run kill-ports",
    "dev": "concurrently \"npm run dev -w @p2p/cds-mock\" \"npm run dev -w @p2p/bap\"",
    "dev:cds": "npm run dev -w @p2p/cds-mock",
    "dev:prosumer": "npm run dev -w @p2p/bap",
    "seed": "npm run seed -w @p2p/bap && npm run seed -w @p2p/cds-mock",
    "clean": "rm -rf packages/*/dist packages/*/*.db",
    "clean:db": "rm -f packages/*/*.db && echo 'âœ… All databases cleared (restart services to clear in-memory state)'",
    "clear:all": "bash scripts/clear-all.sh",
    "reset": "npm run clean:db && npm run seed",
    "flow": "bash scripts/run-flow.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
