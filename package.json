{
  "name": "p2p-energy-trading",
  "version": "1.0.0",
  "description": "Beckn v2 P2P Energy Trading MVP - Phase 1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "kill-ports": "lsof -ti:4000 | xargs kill -9 2>/dev/null; lsof -ti:4001 | xargs kill -9 2>/dev/null; echo 'Ports cleared'",
    "predev": "npm run kill-ports || true",
    "dev": "concurrently \"npm run dev -w @p2p/cds-mock\" \"npm run dev -w @p2p/bap\"",
    "dev:cds": "npm run dev -w @p2p/cds-mock",
    "dev:prosumer": "npm run dev -w @p2p/bap",
    "seed": "npm run seed -w @p2p/bap",
    "clean": "rm -rf packages/*/dist packages/*/*.db",
    "clean:db": "rm -f packages/*/*.db && echo 'âœ… Old SQLite databases cleared'",
    "clear:all": "bash scripts/clear-all.sh",
    "reset": "npm run clean:db && npm run seed",
    "flow": "bash scripts/run-flow.sh",
    "db:generate": "prisma generate --schema=packages/shared/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=packages/shared/prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=packages/shared/prisma/schema.prisma",
    "db:push": "prisma db push --schema=packages/shared/prisma/schema.prisma",
    "db:constraints": "bash scripts/add-constraints.sh",
    "db:studio": "prisma studio --schema=packages/shared/prisma/schema.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run docker:up && sleep 5 && npm run db:push && npm run db:generate && npm run seed && npm run dev",
    "test": "jest",
    "test:concurrency": "jest --testPathPattern=concurrency --runInBand",
    "test:watch": "jest --watch",
    "load-test": "ts-node scripts/load-test.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
