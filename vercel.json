{
    "buildCommand": "cd packages/web && npm install && npm run build",
    "outputDirectory": "packages/web/.next",
    "devCommand": "cd packages/web && npm run dev",
    "installCommand": "npm install",
    "framework": "nextjs",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://p2p-trading-production-c4e8.up.railway.app/api/:path*"
        },
        {
            "source": "/auth/:path*",
            "destination": "https://p2p-trading-production-c4e8.up.railway.app/auth/:path*"
        },
        {
            "source": "/seller/:path*",
            "destination": "https://p2p-trading-production-c4e8.up.railway.app/seller/:path*"
        },
        {
            "source": "/callbacks/:path*",
            "destination": "https://p2p-trading-production-c4e8.up.railway.app/callbacks/:path*"
        },
        {
            "source": "/chat/:path*",
            "destination": "https://p2p-trading-production-c4e8.up.railway.app/chat/:path*"
        }
    ]
}

